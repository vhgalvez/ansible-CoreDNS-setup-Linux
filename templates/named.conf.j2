options {
    listen-on port 53 { any; };
    listen-on-v6 { any; };
    directory "/var/named";
    allow-query { any; };
    recursion yes;
    forwarders { {{ dns_forwarders }} };
    dnssec-validation no;
};

zone "{{ domain_name }}" IN {
    type master;
    file "/var/named/db.{{ domain_name }}";
};