version: '3.8'
services:
  coredns:
    image: coredns/coredns:latest
    container_name: coredns
    ports:
      - "53:53/udp"
      - "53:53/tcp"
      - "8080:8080" # Puerto para el plugin de health (opcional)
    volumes:
      - "{{ coredns_config_dir }}:/etc/coredns"
    restart: unless-stopped